<?xml version="1.0" ?>
<robot name="slope">

  <!-- 경사면의 링크 -->
  <link name="base_link">
    <visual>
      <origin xyz="0 0 0.05" rpy="0 0.4 0"/>  <!-- 경사도 (rpy) 설정 -->
      <geometry>
        <box size="1 0.5 0.1"/>
      </geometry>
      <!-- <material name = "gray">
        <color rgba="0.5 0.5 0.5 1.0"/> 
      </material> -->
    </visual>
    <collision>
      <origin xyz="0 0 0.05" rpy="0 0.4 0"/> <!-- 충돌체와 시각적 요소 정렬 -->
      <geometry>
        <box size="1 0.5 0.1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <origin xyz="0 0 0.05"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
    </inertial>
  </link>

  <!-- world에 고정하기 위한 조인트 -->
  <joint name="fixed_joint" type="fixed">
    <parent link="world"/>
    <child link="base_link"/>
    <origin xyz="0 0 0"/>
  </joint>

</robot>